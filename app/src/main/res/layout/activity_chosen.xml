<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bgrnd_two_act">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/list_fon">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="The chosen deal details"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="#ffdaded0"
            android:typeface="serif"
            android:layout_marginBottom="5dp">
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TextView01"
            android:layout_weight="1"
            android:text="Characteristic"
            android:textColor="#FFE4B5"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/TextView02"
            android:text="Details"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColor="#FFE4B5"
            android:typeface="normal" >
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_fon">

        <TextView
            android:layout_weight="1"
            android:id="@+id/textView11"
            android:text="Date"
            android:textColor="#ffdaded0"
            android:textStyle="normal" >
        </TextView>

        <TextView
            android:layout_weight="2"
            android:textColor="#ffdaded0"
            android:id="@+id/textView12">
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:id="@+id/textView21"
            android:textColor="#ffdaded0"
            android:text="Time"
            android:textStyle="normal" >
        </TextView>

        <TextView
            android:layout_weight="2"
            android:textColor="#ffdaded0"
            android:id="@+id/textView22">
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_fon">

        <TextView
            android:layout_weight="1"
            android:id="@+id/textView201"
            android:textColor="#ffdaded0"
