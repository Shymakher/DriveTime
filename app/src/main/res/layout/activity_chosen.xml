    </TableRow>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm deal"
        android:id="@+id/confirm"
        android:onClick="confirm"
        android:layout_column="0"
        android:layout_gravity="center_horizontal" />

</TableLayout>