<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context="com.example.drivetime.drivetime.CompareActivity"
    android:background="@drawable/bgrnd_two_act">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELP"
        android:onClick="help"
        android:id="@+id/buttonHelp"
        android:background="@drawable/selector_help"
        style="@style/Button_text"
        android:gravity="center_vertical|right"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_below="@+id/buttonHelp"
        android:layout_alignParentStart="true"
        android:background="@drawable/list_fon"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
